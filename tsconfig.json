{
	"include": ["src/**/*"],
	"exclude": ["src/__tests__"],
	"compilerOptions": {
		"isolatedModules": true,
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2019",
		"verbatimModuleSyntax": true
	}
}
